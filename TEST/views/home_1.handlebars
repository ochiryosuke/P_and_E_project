<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <script src="https://aframe.io/releases/0.8.2/aframe.min.js"></script>
    <script src="//cdn.jsdelivr.net/gh/n5ro/aframe-physics-system@v1.4.0/dist/aframe-physics-system.js"></script>
    <script src="https://cdn.rawgit.com/jeromeetienne/AR.js/1.6.2/aframe/build/aframe-ar.js"></script>
  </head>

  <body>
    <a-scene physics="debug: false;">
      
      {{!-- <a-camera id="camera" active="true" look-controls wasd-controls position="0 1.6 0" data-aframe-default-camera></a-camera> --}}
      <a-marker marker type="pattern" url="pattern-ku.patt">
        <a-sphere
          position="-1 0.3 -2"
          rotation="0 5 0"
          color="#4CC3D9"
          radius="0.3"
          depth="0.5"
          dynamic-body="linearDamping:0.9;mass:10;"
        ></a-sphere>

        {{!-- 床 --}}
        <a-plane
          position="0 -1 -4"
          rotation="-110 0 0"
          width="10"
          height="10"
          color="#7BC8A4"
          static-body
        ></a-plane>

      </a-marker>

      {{!-- 壁 --}}
      {{!-- <a-plane
        position="0 3 -3.6"
        rotation="0 0 0"
        width="10"
        height="10"
        color="#7BC8A4"
        static-body
      ></a-plane> --}}

        {{!-- <a-sky color="#ECECEC"></a-sky> --}}
      <a-entity camera></a-entity>
    </a-scene>
  </body>
</html>